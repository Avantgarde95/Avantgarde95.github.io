---
import fs from "fs";
import path from "path";

import { createSVGID, usedSVGNames } from "@/shared/utils/SVGUtils";

const svgItems = [...usedSVGNames].map(name => ({
  id: createSVGID(name),
  svg: fs.readFileSync(path.join(process.cwd(), `src/shared/icons/${name}.svg`)),
}));
---

<svg class="absolute h-0 w-0">
  {
    svgItems.map(item => (
      <symbol viewBox="0 0 24 24" id={item.id}>
        {item.svg}
      </symbol>
    ))
  }
</svg>

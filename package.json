{
    "name": "mypage",
    "version": "0.0.1",
    "description": "Hunmin Park's homepage",
    "author": "Hunmin Park",
    "dependencies": {
        "next": "^12.0.7",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "luminous-lightbox": "^2.3.5",
        "@fortawesome/fontawesome-svg-core": "^1.2.36",
        "@fortawesome/free-solid-svg-icons": "^5.15.4",
        "@fortawesome/free-regular-svg-icons": "^5.15.4",
        "@fortawesome/free-brands-svg-icons": "^5.15.4",
        "react-avant": "Avantgarde95/react-avant"
    },
    "devDependencies": {
        "typed-scss-modules": "^4.1.1",
        "eslint-config-airbnb": "^19.0.2",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsdoc": "^37.1.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.3.0",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "npm-run-all": "^4.1.5",
        "node-fetch": "^3.1.0",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "@types/node": "^16.11.12"
    },
    "scripts": {
        "task:typing": "tsm \"src/**/*.{css,scss}\"",
        "task:serve": "next -p 8080",
        "task:build": "next build && next export -o docs",
        "task:lint": "next lint",
        "serve": "run-p \"task:typing\" \"task:serve\"",
        "build": "run-s \"task:typing\" \"task:build\"",
        "lint": "run-s \"task:lint\"",
        "lint:fix": "run-s \"task:lint -- --fix\""
    }
}